<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".surat" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B6C49D">

        <TextView
            android:id="@+id/surat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:linksClickable="true"
            android:text="Surat"
            android:textSize="28sp"
            android:textColor="#5F6552"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:linksClickable="true"
            android:paddingTop="12dp"
            android:text="Bookmark"
            android:textAlignment="center"
            android:textColor="#5F6552"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/surat1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-FATIHAH"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/surat2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-BAQARAH"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/surat3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT ALI-IMRAN"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AN-NISA"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-MAIDAH"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-AN'AM"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-A'RAF"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AL-ANFAL"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT AT-TAUBAH"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/surat10"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="25dp"
        android:paddingTop="17dp"
        android:text="SURAT YUNUS"
        android:textSize="20sp" />
</LinearLayout>